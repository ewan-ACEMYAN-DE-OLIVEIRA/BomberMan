<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<StackPane style="-fx-background-color: #181c24;" xmlns:fx="http://javafx.com/fxml" fx:controller="BomberMan.controller.DifficultyDialogController">
    <VBox alignment="CENTER" spacing="24">
        <Label text="Choisissez la difficulté" style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #ffe066;"/>
        <HBox alignment="CENTER" spacing="24">
            <Button fx:id="easyBtn" text="Facile" styleClass="menu-button"/>
            <Button fx:id="normalBtn" text="Normal" styleClass="menu-button"/>
            <Button fx:id="hardBtn" text="Difficile" styleClass="menu-button"/>
        </HBox>
        <Label fx:id="descLabel" text="Mode facile : l'IA se déplace au hasard et pose peu de bombes."
               wrapText="true" style="-fx-text-fill: #bfc9da; -fx-font-size: 16; -fx-padding:12;" maxWidth="350"/>
        <Button fx:id="confirmBtn" text="Valider" style="-fx-font-size:18; -fx-font-weight:bold; -fx-background-color:#ffbe0b; -fx-text-fill:#181c24; -fx-padding:8 32 8 32; -fx-background-radius:8;" disable="true"/>
    </VBox>
</StackPane>
