<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<StackPane minWidth="700" minHeight="700" xmlns:fx="http://javafx.com/fxml"
           fx:controller="BomberMan.controller.MenuController"
           styleClass="root"
           stylesheets="@/css/menu.css">
    <!-- Menu au-dessus de l'image de fond -->
    <VBox alignment="CENTER" spacing="18" styleClass="menu-background">
        <ImageView fx:id="logoImage" fitWidth="300" preserveRatio="true">
            <image>
                <Image url="@/images/logo.png"/>
            </image>
        </ImageView>
        <Button text="Jouer 1v1" onAction="#onPlay1v1"/>
        <Button text="Jouer contre l'IA" onAction="#onPlayIA"/>
        <Button text="Mode Capture the Flag" onAction="#onPlayCTF"/>
        <Button text="Personnalisation" onAction="#onCustom"/>
        <Button text="Quitter" onAction="#onQuit"/>
    </VBox>
</StackPane>
