<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="30.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="BomberMan.controller.MenuController" stylesheets="@../css/menu.css">
    <ImageView fx:id="logoImage" fitHeight="120" fitWidth="380" />
    <Label fx:id="titleLabel" text="SUPER BOMBERMAN" styleClass="menu-title"/>
    <Button fx:id="playButton" text="NORMAL GAME" styleClass="menu-btn"/>
    <Button fx:id="battleButton" text="VS IA" styleClass="menu-btn"/>
    <Button fx:id="customButton" text="PERSONNALISATION" styleClass="menu-btn"/>
    <Button fx:id="quitButton" text="QUIT" styleClass="menu-btn"/>
</VBox>
